---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import ProductCard from '../components/ProductCard.astro';

const papas = [
  {
    name: 'Fritas',
    price: 1200,
    ingredients: ['Papas', 'Sal'],
    description: 'Nuestras clásicas papas fritas, crujientes por fuera y suaves por dentro.'
  },
  {
    name: 'Cheddar y Bacon',
    price: 2500,
    ingredients: ['Papas', 'Queso cheddar', 'Bacon', 'Cebolla verde'],
    description: 'Papas cubiertas con queso cheddar derretido y trozos de bacon crujiente.'
  },
  {
    name: 'Rústicas',
    price: 3200,
    ingredients: ['Papas', 'Especias', 'Aceite de oliva'],
    description: 'Papas cortadas en gajos, condimentadas con nuestro mix de especias.'
  },
  {
    name: 'Sweet Potato',
    price: 3100,
    ingredients: ['Batata', 'Sal', 'Romero'],
    description: 'Deliciosas papas de batata, una alternativa saludable y sabrosa.'
  }
];
---

<Layout title="La Burgesia - Papas">
  <Header />
  <main>
    <h2 class="text-2xl font-extrabold font-sans">Nuestras Papas</h2>
    <div class="product-grid">
      {papas.map((papa) => (
        <ProductCard {...papa} />
      ))}
    </div>
  </main>
</Layout>

<style>
  main {
    max-width: 1200px;
    margin: 2rem auto;
    padding: 0 1rem;
  }
  h2 {
    color: #FF5A5F;
    text-align: center;
    margin-bottom: 2rem;
  }
  .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }
</style>