---
export interface Props {
  name: string;
  price: number;
  ingredients: string[];
  description: string;
}

const { name, price, ingredients, description } = Astro.props;
const imageUrl = "https://chefeel.com/chefgeneralfiles/2023/06/hamburguesa-parrilla-papas-fritas-comida-clasica-generada-ia-880x759.jpg";
---

<div class="product-card">
  <img src={imageUrl} alt={name} class="product-image" />
  <h3>{name}</h3>
  <p class="price">${price}</p>
  <p class="ingredients"><strong>Ingredientes:</strong> {ingredients.join(', ')}</p>
  <p class="description">{description}</p>
  <button class="add-to-cart" data-name={name} data-price={price}>Agregar a la cuenta</button>
</div>

<script>
  import { addItem } from '../store/cartStore';

  document.querySelectorAll('.add-to-cart').forEach(button => {
    button.addEventListener('click', () => {
      const name = button.getAttribute('data-name');
      const price = parseFloat(button.getAttribute('data-price'));
      addItem({ name, price });
    });
  });
</script>

<style>
  .product-card {
    background-color: white;
    border-radius: 8px;
    padding: 1rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }
  .product-card:hover {
    transform: translateY(-5px);
  }
  .product-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 8px;
    margin-bottom: 1rem;
  }
  h3 {
    color: #FF5A5F;
    margin-top: 0;
  }
  .price {
    font-size: 1.2rem;
    font-weight: bold;
    color: #4CAF50;
  }
  .ingredients {
    font-size: 0.9rem;
    color: #666;
  }
  .description {
    font-size: 0.9rem;
    color: #333;
    margin-top: 0.5rem;
  }
  .add-to-cart {
    background-color: #FF5A5F;
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }
  .add-to-cart:hover {
    background-color: #FF4146;
  }
</style>
